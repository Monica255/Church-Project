<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.jadwal.JadwalActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/pray"
        app:layout_constraintTop_toTopOf="parent">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                app:layout_constraintTop_toTopOf="parent">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_back"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="start|top"
                    android:layout_marginEnd="@dimen/margin_start_end"
                    android:background="@drawable/icon_back"
                    android:button="@android:color/transparent" />

            <TextView
                android:layout_marginBottom="25dp"
                android:id="@+id/toolbar_title"
                style="@style/Header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:text="@string/jadwal_ibadah"
                android:textColor="@color/white" />
            </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        app:layout_constraintTop_toBottomOf="@id/toolbar_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout

            android:layout_margin="@dimen/margin_start_end"
            android:layout_gravity="center"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:layout_marginTop="@dimen/margin_layout_with_ds"
                android:textColor="@color/gold"
                android:textStyle="bold"
                style="@style/SubSubHeader"
                android:text="ROCK ROYAL CHURCH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="@dimen/margin_item_with_ds"
                android:textColor="@color/maroon"
                android:textStyle="bold|italic"
                style="@style/SubSubHeader"
                android:text="Ibadah Raya (Minggu)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/maroon"
                style="@style/TitleText"
                android:text="Ibadah Raya 1 (08.30)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/maroon"
                style="@style/TitleText"
                android:text="Ibadah Raya 2 ROYAL (11.00)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="@dimen/margin_item_with_ds"
                android:textColor="@color/maroon"
                android:textStyle="bold|italic"
                style="@style/SubSubHeader"
                android:text="Ibadah Generasi (Minggu)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/maroon"
                style="@style/TitleText"
                android:text="Ibadah Anak - ROCKY  (08.30)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/maroon"
                style="@style/TitleText"
                android:text="Ibadah Remaja - ROCKET (11.00)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/maroon"
                style="@style/TitleText"
                android:text="Ibadah Pemuda - KGC (11.00)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="@dimen/margin_item_with_ds"
                android:textColor="@color/maroon"
                android:textStyle="bold|italic"
                style="@style/SubSubHeader"
                android:text="Ibadah Doa (Jumat)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/maroon"
                style="@style/TitleText"
                android:text="Doa Malam - Breakthrough (19.00)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="@dimen/margin_layout_with_ds"
                android:textColor="@color/gold"
                android:textStyle="bold"
                style="@style/SubHeader"
                android:text="ROCK CITY CHURCH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="@dimen/margin_item_with_ds"
                android:textColor="@color/maroon"
                android:textStyle="bold|italic"
                style="@style/SubSubHeader"
                android:text="Ibadah Raya (Minggu)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/maroon"
                style="@style/TitleText"
                android:text="Ibadah Raya 1 (08.30)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/maroon"
                style="@style/TitleText"
                android:text="Ibadah Raya 2 ROYAL (11.00)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="@dimen/margin_item_with_ds"
                android:textColor="@color/maroon"
                android:textStyle="bold|italic"
                style="@style/SubSubHeader"
                android:text="Ibadah Generasi (Minggu)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/maroon"
                style="@style/TitleText"
                android:text="Ibadah Anak - ROCKY  (08.30)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                style="@style/TitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ibadah Remaja - ROCKET (11.00)"
                android:textColor="@color/maroon" />

            <TextView
                android:textColor="@color/maroon"
                style="@style/TitleText"
                android:text="Ibadah Pemuda - KGC (11.00)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="@dimen/margin_item_with_ds"
                android:textColor="@color/maroon"
                android:textStyle="bold|italic"
                style="@style/SubSubHeader"
                android:text="Ibadah Doa (Jumat)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/maroon"
                style="@style/TitleText"
                android:text="Doa Malam - Breakthrough (19.00)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.bible.VerseFragment">

    <TextView
        tools:visibility="visible"
        android:visibility="gone"
        android:id="@+id/tv_passage_name"
        android:textStyle="bold"
        android:textColor="@color/gold"
        android:layout_marginTop="@dimen/margin_start_end"
        android:layout_marginEnd="@dimen/margin_start_end"
        android:layout_marginStart="@dimen/margin_start_end"
        style="@style/TitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kejadian" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_verse"
        android:layout_margin="@dimen/margin_layout_with_ds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
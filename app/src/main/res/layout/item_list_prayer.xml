<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="@dimen/margin_item_with_ds"
    android:layout_marginEnd="@dimen/margin_item_with_ds"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/maroon" />

    <LinearLayout
        android:paddingTop="@dimen/margin_item_with_ds"
        android:paddingBottom="@dimen/margin_item_with_ds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_item_with_ds"
            android:layout_marginBottom="@dimen/margin_item_with_ds"
            android:gravity="start"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ll_email"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:visibility="visible"
                        style="@style/SubTitleText"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Email: " />
                    <TextView
                        android:visibility="visible"
                        android:id="@+id/tv_email"
                        style="@style/SubTitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="test@test.com" />
                </LinearLayout>
            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="6dp"
                android:layout_weight="1" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    style="@style/SubTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Waktu Terkirim: " />
                <TextView
                    android:id="@+id/tv_time"
                    style="@style/SubTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="04-05-2024 13.34" />
            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="6dp"
                android:layout_weight="1" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    style="@style/SubTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Doa: " />
                <TextView
                    android:maxWidth="250dp"
                    android:id="@+id/tv_prayer"
                    style="@style/SubTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="test test test test test test test test test test test test test test test test test test" />
            </LinearLayout>



        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_weight="1"
            android:backgroundTint="@color/maroon"
            android:id="@+id/btn_delete"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="@string/delete"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/maroon" />
</LinearLayout>